<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorMain">

    <LinearLayout
        android:id="@+id/theme_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="?colorSecondaryLighter"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/themes"
            android:textAlignment="center"
            android:textColor="?colorTextTitle"
            android:textSize="42sp" />

        <LinearLayout
            android:id="@+id/button_theme_std"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_selector_standart"
            android:onClick="clickBuyTheme"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/button_selector_standart"
                android:clickable="false"
                android:shadowColor="@color/colorMain"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/theme_std"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/buy_button_std"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:clickable="false"
                android:drawableRight="@drawable/ic_stars_white_24dp"
                android:text="@string/theme_cost"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_theme_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_selector_black"
            android:onClick="clickBuyTheme"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/button_selector_black"
                android:clickable="false"
                android:shadowColor="@android:color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/theme_black"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/buy_button_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:clickable="false"
                android:drawableRight="@drawable/ic_stars_black_24dp"
                android:text="@string/theme_cost"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_theme_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_selector_white"
            android:onClick="clickBuyTheme"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/button_selector_white"
                android:clickable="false"
                android:shadowColor="@android:color/white"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/theme_white"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/buy_button_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:clickable="false"
                android:drawableRight="@drawable/ic_stars_white_24dp"
                android:text="@string/theme_cost"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_theme_fresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_selector_fresh"
            android:onClick="clickBuyTheme"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/button_selector_fresh"
                android:clickable="false"
                android:shadowColor="#00b0ff"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/theme_fresh"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/buy_button_fresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:clickable="false"
                android:drawableRight="@drawable/ic_stars_white_24dp"
                android:text="@string/theme_cost"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/remove_ad_button"
        style="@style/ButtonStyle"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:onClick="clickBuyAds"
        android:padding="12dp"
        android:text="@string/remove_ads" />

    <Button
        android:id="@+id/get_coins_button"
        style="@style/ButtonStyle"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/remove_ad_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="clickGetCoins"
        android:padding="12dp"
        android:text="@string/get_coins" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0000"
        android:onClick="clickBack"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="6dp"
        android:paddingTop="16dp"
        android:src="@drawable/ic_arrow_back_white_36dp" />

    <TextView
        android:id="@+id/shop_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#0000"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/ic_stars_white_24dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="8dp"
        android:paddingTop="18dp"
        android:text="1337"
        android:textColor="?colorTextTitle"
        android:textSize="26sp" />

</RelativeLayout>