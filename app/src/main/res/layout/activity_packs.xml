<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorMain">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:shadowColor="?colorSecondaryLighter"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="Packs"
        android:textAlignment="center"
        android:textColor="?colorTextTitle"
        android:textSize="42sp" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/button_pack_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_selector_standart"
            android:onClick="clickBuyPack"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_pack_1_name"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/button_selector_standart"
                android:clickable="false"
                android:shadowColor="?attr/colorTextShadowButton"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="pack 1"
                android:textAllCaps="false"
                android:textColor="?colorTextButton"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/buy_button_pack_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:clickable="false"
                android:drawableRight="@drawable/ic_stars_white_24dp"
                android:text="100"
                android:textColor="?colorTextButton"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_pack_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_selector_standart"
            android:onClick="clickBuyPack"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_pack_2_name"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/button_selector_standart"
                android:clickable="false"
                android:shadowColor="?attr/colorTextShadowButton"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="pack 2"
                android:textAllCaps="false"
                android:textColor="?colorTextButton"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/buy_button_pack_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:clickable="false"
                android:drawableRight="@drawable/ic_stars_white_24dp"
                android:text="1500"
                android:textColor="?colorTextButton"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_pack_hard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/button_selector_standart"
            android:onClick="clickBuyPack"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_pack_hard_name"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="@drawable/button_selector_standart"
                android:clickable="false"
                android:shadowColor="?attr/colorTextShadowButton"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="pack hard"
                android:textAllCaps="false"
                android:textColor="?colorTextButton"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/buy_button_pack_hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:clickable="false"
                android:drawableRight="@drawable/ic_stars_white_24dp"
                android:text="1500"
                android:textColor="?colorTextButton"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0000"
        android:onClick="clickBack"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="6dp"
        android:paddingTop="16dp"
        android:src="@drawable/ic_arrow_back_white_36dp" />

    <TextView
        android:id="@+id/packs_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#0000"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/ic_stars_white_24dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="8dp"
        android:paddingTop="18dp"
        android:text="1337"
        android:textColor="?colorTextTitle"
        android:textSize="26sp" />

</RelativeLayout>